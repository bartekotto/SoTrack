<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
    android:contextClickable="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/react_card_view_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/thumb_up"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/ic_thumb_up_round" />

            <ImageButton
                android:id="@+id/thumb_down"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:background="@mipmap/ic_thumb_down_round"
                android:rotation="180" />

            <ImageButton
                android:id="@+id/close"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/ic_close_round" />

            <Spinner
                android:id="@+id/tag_spinner_hover"
                android:layout_width="208dp"
                android:layout_height="44dp"
                android:layout_marginTop="41dp"
                android:layout_marginBottom="208dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.078"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tag_name_input" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>